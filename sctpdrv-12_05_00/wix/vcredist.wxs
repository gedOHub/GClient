<?xml version="1.0" encoding="UTF-8"?>
<?define vcredist_x86 =  http://download.microsoft.com/download/d/d/9/dd9a82d0-52ef-40db-8dab-795376989c03/vcredist_x86.exe ?>
<?define vcredist_x64 =  http://download.microsoft.com/download/d/d/9/dd9a82d0-52ef-40db-8dab-795376989c03/vcredist_x64.exe ?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
	<Fragment>
    <util:RegistrySearch Root="HKLM" Key="SOFTWARE\Microsoft\VisualStudio\10.0\VC\VCRedist\x86" Value="Installed" Variable="vcredist_x86" />
    <util:RegistrySearch Root="HKLM" Key="SOFTWARE\Microsoft\VisualStudio\10.0\VC\VCRedist\x64" Value="Installed" Variable="vcredist_x64" />
    <PackageGroup Id="vcredist">
      <ExePackage Id="vcredist_x86"
        Cache="no"
        Compressed="yes"
        PerMachine="yes"
        Permanent="yes"
        Vital="yes"
        Name="Redist\vcredist_x86.exe"
        SourceFile="$(env.WindowsSdkDir)\Bootstrapper\Packages\vcredist_x86\vcredist_x86.exe"
        InstallCommand="/q"
        DetectCondition="vcredist_x86 AND (vcredist_x86 &gt;= 1)">
        <ExitCode Value ="3010" Behavior="forceReboot" />
      </ExePackage>
      <ExePackage Id="vcredist_x64"
        Cache="no"
        Compressed="yes"
        PerMachine="yes"
        Permanent="yes"
        Vital="yes"
        Name="Redist\vcredist_x64.exe"
        SourceFile="$(env.WindowsSdkDir)\Bootstrapper\Packages\vcredist_x64\vcredist_x64.exe"
        InstallCommand="/q"
        InstallCondition="VersionNT64"
        DetectCondition="vcredist_x64 AND (vcredist_x64 &gt;= 1)">
        <ExitCode Value ="3010" Behavior="forceReboot" />
      </ExePackage>
    </PackageGroup>
	</Fragment>
</Wix>